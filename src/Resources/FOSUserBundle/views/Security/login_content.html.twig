{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}


<div class="container">

<div class="login">

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

<div class="row">
	<div class="col-sm-3">
		<b>Logowanie</b> 
	</div>
	<div class="col-sm-6">
		<a href="{{ path('fos_user_resetting_request') }}">Zresetuj hasło</a>
	</div>
	<div class="cols-sm-3">
		<a href="{{ path('fos_user_registration_register') }}">Nowe konto</a>
	</div>
</div>

<div class="row">
	<div class="col-sm-6">
    		<label for="username">Adres e-mail</label>
	</div>
	<div class="col-sm-6">
    		<input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
	</div>
</div>

<div class="row">
	<div class="col-sm-6">
	    <label for="password">{{ 'security.login.password'|trans }}</label>
	</div>
	<div class="col-sm-6">
    		<input type="password" id="password" name="_password" required="required" autocomplete="current-password" />
	</div>
</div>


<div class="row">
	<div class="col-sm-4">
    		<input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" /> 

	</div>

</div>

<div class="row">
	<div class="col-sm-12">
		<a href="/connect/facebook">Zaloguj przez FB</a> <br>
		<a href="/connect/google">Zaloguj przez Google</a>
	</div>
</div>
<div class="row">
	<div class="col-sm-12">
		<a href="https://port119.pl/prywatnosc.html">Polityka prywatności</a>
	</div>

</div>
</form>
